<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="fr.polytech.lmu.ui.handlers.LMUHandlerPNG"
            id="fr.polytech.lmu.ui.commands.LmuPngCommand"
            name="PNG generator">
      </command>
      <command
            defaultHandler="fr.polytech.lmu.ui.handlers.LMUHandlerPDF"
            id="fr.polytech.lmu.ui.commands.LmuPdfCommand"
            name="PDF generator">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="fr.polytech.lmu.ui.commands.LmuPngCommand"
            class="fr.polytech.lmu.ui.handlers.LMUHandlerPNG">
      </handler>
      <handler
            class="fr.polytech.lmu.ui.handlers.LMUHandlerPDF"
            commandId="fr.polytech.lmu.ui.commands.LmuPdfCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="lmu-menu"
               label="LMU">
            <command
                  commandId="fr.polytech.lmu.ui.commands.LmuPngCommand"
                  id="lmu-png"
                  label="PNG generator"
                  style="push"
                  tooltip="PNG">
               <visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.ICompilationUnit">
                           </instanceof>
                        </iterate>
                     </with>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IJavaProject">
                           </instanceof>
                        </iterate>
                     </with>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IPackageFragmentRoot">
                           </instanceof>
                        </iterate>
                     </with>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="IPackageFragment">
                           </instanceof>
                        </iterate>
                     </with>
                  </or>
               </visibleWhen>
            </command>
            <command
                  commandId="fr.polytech.lmu.ui.commands.LmuPdfCommand"
                  id="lmu-pdf"
                  label="PDF generator"
                  style="push"
                  tooltip="PDF">
               <visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.ICompilationUnit">
                           </instanceof>
                        </iterate>
                     </with>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IJavaProject">
                           </instanceof>
                        </iterate>
                     </with>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IPackageFragmentRoot">
                           </instanceof>
                        </iterate>
                     </with>
                     <with
                           variable="activeMenuSelection">
                        <iterate>
                           <instanceof
                                 value="IPackageFragment">
                           </instanceof>
                        </iterate>
                     </with>
                  </or>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
